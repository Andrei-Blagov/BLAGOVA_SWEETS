datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  NEW
  CONFIRMED
  IN_PROGRESS
  READY
  DELIVERING
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model User {
  id           String    @id @default(cuid())
  email        String?   @unique
  phone        String?   @unique
  name         String?
  role         UserRole  @default(CUSTOMER)
  passwordHash String?
  orders       Order[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model ProductCategory {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String           @id @default(cuid())
  name        String
  slug        String           @unique
  description String?
  price       Int
  active      Boolean          @default(true)
  category    ProductCategory? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  isPopular   Boolean          @default(false)
  imageUrl    String?
  orderItems  OrderItem[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([categoryId])
  @@index([active, isPopular])
}

model Order {
  id            String         @id @default(cuid())
  user          User?          @relation(fields: [userId], references: [id])
  userId        String?
  status        OrderStatus    @default(NEW)
  paymentStatus PaymentStatus  @default(PENDING)
  customerName  String
  customerPhone String
  customerEmail String?
  address       String
  comment       String?
  totalItems    Int
  totalPrice    Int
  items         OrderItem[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([status])
  @@index([paymentStatus])
  @@index([createdAt])
  @@index([userId])
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  name      String
  price     Int
  quantity  Int
  imageUrl  String?
  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  contact   String    // телефон или email, то что введёт пользователь
  message   String
  source    String?   // откуда пришло сообщение (например, "contact-page")

  createdAt DateTime @default(now())

  @@index([createdAt])
}

